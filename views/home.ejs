<!DOCTYPE html>
<html lang="en">
  <head>
    <title>URL Shortner App</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
    <h1>URL Shortner App</h1>
    <div>
      <% if(locals.id){ %>
        <p>URL Generated: http://localhost:3000/url/<%= id %></p>
      <% } %>
      <form method="POST" action="/url" >
        <label for="url">Enter Your Original URL</label>
        <input type="text" id="url" name="url" placeholder="https://www.example.com"/>
        <button type="submit">Generate</button>
      </form>
    </div>
    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>S.No</th>
          <th>Links</th>
          <th>ShortId</th>
          <th>RedirectUrl</th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><a href="<%= `http://localhost:3000/url/${url.shortId}` %>" target="_blank">link</a></td>
              <td><%= url.shortId %></td>
              <td><%= url.redirectUrl %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
